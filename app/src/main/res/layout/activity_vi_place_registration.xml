<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vi_registration_header_cl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/iv_registration_back_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vi_registration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="등록"
            android:textStyle="bold"
            android:textSize="45sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vi_registration_header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textSize="13sp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/vi_registration_header_cl"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/iv_main_set_nickname_et"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/searchbar"
        android:hint="별명을 입력해 주세요"
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        android:textSize="33sp"
        app:layout_constraintTop_toBottomOf="@id/vi_registration_header_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_main_nickname_record_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/speech"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_set_nickname_et" />

    <EditText
        android:id="@+id/iv_main_set_place_et"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/searchbar"
        android:hint="장소를 지정해 주세요"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        android:textSize="33sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/iv_main_nickname_record_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_main_place_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/speech"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_set_place_et" />

    <android.widget.Button
        android:id="@+id/place_registration_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchbar"
        android:textSize="30sp"
        android:text="등록하기"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_place_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>