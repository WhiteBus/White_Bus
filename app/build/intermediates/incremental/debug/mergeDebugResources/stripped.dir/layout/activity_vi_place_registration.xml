<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vi_registration_header_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/iv_registration_back_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vi_registration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_registration_back_iv"
            android:text="등록"
            android:textSize="45dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vi_registration_header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textSize="13sp"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/vi_registration_header_cl"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/iv_main_set_nickname_et"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbar"
        android:hint="별명을 입력해 주세요"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/vi_registration_header_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_main_nickname_record_iv"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/vi_record"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_set_nickname_et" />

    <EditText
        android:id="@+id/iv_main_set_place_et"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbar"
        android:hint="장소를 지정해 주세요"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/iv_main_nickname_record_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/vi_record"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_set_place_et" />

</androidx.constraintlayout.widget.ConstraintLayout>